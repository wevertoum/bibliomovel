<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/LoginTheme"
    tools:context="br.ufg.inf.level6.bibliomovel.LoginActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/loginLogoHolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/loginTxtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="casual"
            android:gravity="left|center_vertical|center"
            android:text="BiblioMóvel"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textColor="000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/loginImgLogo" />

        <ImageView
            android:id="@+id/loginImgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/loginTxtTitle"
            app:srcCompat="@drawable/ic_book" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/loginInputHolder"
        android:layout_width="0dp"
        android:layout_height="441dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">

        <EditText
            android:id="@+id/loginEdtEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#A0A0A0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/loginIconEmail"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/signinNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:hint="nome"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#A0A0A0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/loginIconEmail"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/signinCPF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="168dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:hint="CPF"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#A0A0A0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/loginIconEmail"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/signinTelefone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="212dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:hint="telefone"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#A0A0A0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/loginIconEmail"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/loginIconEmail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:tint="#FF8C00"
            app:layout_constraintBottom_toBottomOf="@+id/loginEdtEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/loginEdtEmail"
            app:srcCompat="@drawable/ic_email" />

        <ImageView
            android:id="@+id/loginIconNome"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:tint="#FF8C00"
            app:layout_constraintBottom_toBottomOf="@+id/loginEdtEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/loginEdtEmail"
            app:srcCompat="@drawable/ic_per" />

        <ImageView
            android:id="@+id/loginIconSenha"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:tint="#FF8C00"
            app:layout_constraintBottom_toBottomOf="@+id/loginEdtSenha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/loginEdtSenha"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_lock" />

        <EditText
            android:id="@+id/loginEdtSenha"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:ems="10"
            android:hint="senha"
            android:inputType="numberPassword"
            android:textColor="#000000"
            android:textColorHint="#A0A0A0"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="262dp" />

        <ImageView
            android:id="@+id/loginIconSenhaConfirmacao"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:tint="#FF8C00"
            app:layout_constraintBottom_toBottomOf="@+id/loginEdtSenhaConfirmacao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/loginEdtSenhaConfirmacao"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_lock" />


        <EditText
            android:id="@+id/loginEdtSenhaConfirmacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:hint="confirmação de senha"
            android:inputType="numberPassword"
            android:textColor="#DCDCDC"
            android:textColorHint="#A0A0A0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/loginIconSenha"
            app:layout_constraintTop_toBottomOf="@+id/loginEdtEmail" />

        <Button
            android:id="@+id/loginBtnCadastrar"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="casual"
            android:text="CADASTRAR"
            android:textColor="white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
